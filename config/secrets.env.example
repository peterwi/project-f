# Copy to config/secrets.env and set a strong password.
# NOTE: This file is used by docker-compose; keep it simple KEY=VALUE lines.

# Postgres
POSTGRES_USER=tradingops
POSTGRES_PASSWORD=CHANGE_ME
POSTGRES_DB=tradingops
POSTGRES_PORT=5432

# All persistent data goes on the larger filesystem.
POSTGRES_DATA_DIR=/data/trading-ops/postgres-data

# Backups (pg_dump) to the larger filesystem.
POSTGRES_BACKUP_DIR=/data/trading-ops/backups/postgres
POSTGRES_BACKUP_RETENTION_DAYS=30

# Runtime artifacts (reports/tickets/etc). Generated locally (not committed).
ARTIFACTS_DIR=/data/trading-ops/artifacts
DATA_RAW_DIR=/data/trading-ops/data/raw
DATA_CLEAN_DIR=/data/trading-ops/data/clean
DATA_COVERAGE_MIN_PCT=98

# Reconciliation tolerances (v1 conservative defaults)
RECONCILE_CASH_TOLERANCE_GBP=5
RECONCILE_UNITS_TOLERANCE_ABS=0.0001

# Optional (defaults to UTC if unset)
TZ=UTC
